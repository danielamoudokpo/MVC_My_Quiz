{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheets %}

        <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <style>
        .category-child .post-content span {
            color: #fff;
        }
        .category-child .post-content {
            background-color: rgba(7, 7, 7, 0.65);
            color: #fff;
            margin-top: -30px;
            position: relative;
            text-align: center;
            width: 100%;
            z-index: 1;
            height: 30px;
            overflow: hidden;
        }
        .thumb img {
            width: 200px;
            height: 150px;
        }

        .post-content span {
            line-height: 30px;
            position: relative;
            top: -10px;
        }
    </style>

{% endblock %}

{% block body %}

<div class="container">	
    <h1> CATEGORIES </h1>
	<div class="row category-child" style="margin-top:20px">
        {% if Categorie %}

        {% for Categorie in Categorie %}

		<div class="col-lg-3 col-md-6 col-xs-8 thumb ">
                <a class="thumbnail" href="{{ Categorie.id}}">
                    <img class="img-responsive" src="https://data.whicdn.com/images/342185442/original.jpg?t=1585689695" alt="">
                    <div class="wrapper">
                        <div class="caption post">
                            <h2> {{Categorie.name}} </h2>
                        </div>
                    </div>
                </a>
        </div>
          {% endfor %}
	</div>
  
    {% else %}

        <p> No Categories Found</p>

    {% endif %}
</div>

{% endblock %}
